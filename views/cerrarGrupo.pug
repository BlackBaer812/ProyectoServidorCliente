extends layouts/head
block contenido
    main.container.d-flex.justify-content-center.p-2.principal
        .row.d-flex.ancho.border.p-2
            .col-12.d-flex.align-items-center.justify-content-center
                form.row.g-3.border.p-1.mt-4.ancho(action="" method="post")
                    if mensaje
                        div.bg-warning.mb-1.p-1
                            ul 
                                p.text-dark.fw-bold No se ha podido cerrar el grupo:
                                p.text-dark.fw-bold #{mensaje}
                    .row.my-1.d-flex.gap-1
                        .col-md-6.col-12
                            label.visually-hidden(for='usuarioEli') Usuario
                            input#usuarioEli.form-control(type='text' name="usuarioEli" readonly value=idU)
                        .col-md.col-12
                            label.visually-hidden(for='password') Password
                            input#password.form-control(type='password' name="password" placeholder='Password')           
                    .col-12.d-flex.justify-content-center.align-items-center.mt-2
                            button.btn.btn-primary(type='submit') Finalizar grupo
