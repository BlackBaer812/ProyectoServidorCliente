extends layouts/head
block contenido

    main.container.d-flex.justify-content-center.p-2(style="min-height: 81.7vh")
        .row.d-flex.align-items-center.justify-content-center(style="min-height:100%; width: 100%")
            .col-8.d-flex.flex-column.justify-content-center.align-items-center

                form.row.g-3.border.p-1.mt-4(action="/iSesion" method="post")
                    if mensaje
                        div.bg-warning.mb-1.p-1
                            ul 
                                p.text-dark.fw-bold No se ha podido iniciar sesión:
                                li.text-dark El usuario introducido no es correcto.
                                li.text-dark La contraseña no es correcta.
                                li.text-dark El número de telefono ya esta en uso. 
                    .row.my-1.d-flex.gap-1
                        .col-md-6.col-12
                            label.visually-hidden(for='usuario') Usuario
                            input#usuario.form-control(type='text' name="usuario" placeholder="Usuario" value="marcos")
                        .col-md.col-12
                            label.visually-hidden(for='password') Password
                            input#password.form-control(type='password' name="password" placeholder='Password' value="1234")           
                    .col-12.d-flex.justify-content-center.align-items-center.mt-2
                            button.btn.btn-primary(type='submit') Inicio de sesion
                    .col-12.d-flex.justify-content-center.align-items-center.mt-2
                        a.btn.btn-link(href="http://127.0.0.1:4000/recuperacion") Recuperar contraseña
                
                