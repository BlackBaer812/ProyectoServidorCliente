header.container-fluid.sticky-top
    .row.p-1.pb-3
        .col-12.col-lg-2.d-flex.justify-content-center.align-items-center
            a(href="/" aria-label = "Página de inicio") 
                svg(width='100' height='100' viewBox='0 0 258 258' xmlns='http://www.w3.org/2000/svg')
                    rect(width='258' height='258' rx='20' fill='#0AFA62')  // Aguamarina
                    circle(cx='89' cy='94' r='25' fill='#FA5A0A')
                    circle(cx='169' cy='94' r='25' fill='#FA5A0A')
                    path(d='M84 144 Q129 184, 174 144' stroke='#FA5A0A' stroke-width='10' fill='none')
                    text(x='129' y='228' font-size='36' font-family='Arial' fill='#FA5A0A' text-anchor='middle') Shared Control

        .col-12.col-lg-3.d-flex.justify-content-center.align-items-center.gap-2.mt-1
            include ./botones/botones.pug
        .col-7.col-lg-4.d-flex.justify-content-center.align-items-center.mt-2
            h3 #{titulo}
        .col-5.col-lg-3.d-flex.align-items-end.justify-content-center.flex-column.gap-2
            if(identificado)
                button.btn(type='button' data-bs-toggle='collapse' data-bs-target='#collapseWidthExample' aria-expanded='false' aria-controls='collapseWidthExample')
                    i.bi.bi-person#icoUser(aria-label="Página personal" style = " color: " + alerta)

                #collapseWidthExample.collapse
                    nav.row.ancho.p-2
                        .col-6
                            a.btn.btn-primary(href="/paginaUsuario/" + idU)
                                i.bi.bi-person-circle#icoOpUser(data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Pagina de usuario")
                        .col-6
                            a.btn.btn-primary(href="/cerrarSesion")
                                i.bi.bi-box-arrow-left#icoOpUser(data-bs-container="body" data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-placement="top" data-bs-content="Cerrar sesión")
                    

            else
                nav.navbar.navbar-expand-lg.navbar-light
                    .container-fluid
                        // Botón del menú hamburguesa alineado a la derecha
                        button.navbar-toggler.ms-auto(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                            span.navbar-toggler-icon
                        
                        // Contenido del menú
                        #navbarNav.collapse.navbar-collapse
                            .navbar-nav.ms-auto.d-lg-flex.d-grid.gap-2.p-3
                                a.btn.btn-primary.m-ms-2(href="/iSesion") Inicio de sesión
                                a.btn.btn-primary.m-ms-2(href="/registro") Registro
