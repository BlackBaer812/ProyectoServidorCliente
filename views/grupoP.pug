extends layouts/head
block contenido
    main.container.d-flex.justify-content-center.p-2(style="min-height: 81.7vh")
        .row.d-flex(style="width:100%")
            .col.d-flex.gap-1.flex-column(style="min-height:100%; width: 100%")
                .row.border(style="min-height:50%; width: 100%")
                    .col-2
                    .col-8.d-flex.flex-column.justify-content-center.align-items-center
                        h3 Acciones
                        .row
                            .col-12.d-flex.gap-4
                                a.btn.btn-success(href="")
                                    i.bi.bi-receipt-cutoff.fs-2
                                a.btn.btn-warning(href="")
                                    i.bi.bi-box-arrow-right.fs-2
                        h3 Acciones de administrador
                        .row
                            .col-12.d-flex.gap-4
                                a.btn.btn-success(href="")
                                    i.bi.bi-person-add.fs-2
                                a.btn.btn-danger(href="")
                                    i.bi.bi-x-circle-fill.fs-2
                    .col-2.d-flex.flex-column.justify-content-center
                        h4 Situación actual
                        | #{sActual}€
                .row.border.d-flex.align-items-center.justify-content-center(style="min-height:50%; width: 100%")
                    .col-8.d-flex.flex-column.align-items-center
                        h3 Compras
                        if datos.length > 0
                            for dato in datos
                                .row.m-1.d-flex(style="width:100%")
                                    .col-12.border
                                        .row
                                            .col-3
                                                |#{dato.nombre}
                                            .col-3 
                                                |#{dato.valor}
                                            .col-3 
                                                |#{dato.Comentario}
                                            .col-3 
                                                |#{dato.Tipo}