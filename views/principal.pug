extends layouts/head

block contenido
    main.container.p-2(style="min-height: 81.7vh")
        .row
            .col-12.d-flex.justify-content-end.m-2
                a.btn.btn-success(href="/crearGrupo") Crear grupo
        .row.d-flex.justify-content-center.border(style="min-height:100%; width: 100%")
            .col-8.d-flex.flex-column#objetivo
                if grupos.length>0 
                    for grupo in grupos
                        .row 
                            .col-12.border.my-1
                                .row.p-2.fila
                                    .col-4
                                        h3 #{grupo.nombre}
                                    .col-8.d-flex.justify-content-evenly
                                        a.btn.btn-primary.mx-2(href="/accesoGrupo/"+ grupo.grupoid) Acceder
                                        a.btn.btn-primary.mx-2(href="/paginaFactura/" + grupo.grupoid) AÃ±adir factura
        .row.p-2
            .col-6.d-flex.justify-content-end
                button.btn.btn-danger#anterior(onclick="anterior()" disabled) Anterior
            .col-6
                button.btn.btn-success#siguiente(onclick="siguiente()" disabled=ultima) Siguiente 
            
        
